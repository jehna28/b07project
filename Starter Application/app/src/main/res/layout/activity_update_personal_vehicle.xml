<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EcoTracker.InputNewActivity.SelectCategoryActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/turquoise_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingRight="223dp"
                android:text="@string/vehicle_type"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/turquoise"/>

            <Spinner
                android:id="@+id/vType"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/turquoise_border"
                android:padding="16dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingRight="200dp"
                android:paddingTop="20dp"
                android:text="Distance Driven:"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/turquoise"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:inputType="number"
                    android:id="@+id/disDriven"
                    android:background="@drawable/turquoise_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter distance"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/turquoise"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <Spinner
                    android:id="@+id/mikm"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/turquoise_border"
                    android:padding="16dp"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!--
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="@string/vehicle_type"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textColor="@color/turquoise"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="20dp"
                        android:id="@+id/PVCO2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:ellipsize="end"
                        android:textColor="@color/turquoise"
                        android:maxLines="1" />

                </LinearLayout>

                -->

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/saveButtonUPV"
                android:textSize="18sp"
                android:backgroundTint="@color/turquoise"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>