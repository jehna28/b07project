<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBtnBlue4"
    tools:context=".EcoTracker.InputNewActivity.SelectCategoryActivity">

    <ImageView
        android:id="@+id/footprintsImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="-200dp"
        android:scaleType="centerInside"
        android:src="@drawable/fp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:backgroundTint="@color/brightBlue"
        app:cardCornerRadius="20dp"

        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0">


        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/whitebg"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/enter_activity"
                android:textSize="30sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/brightBlue"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/backgroundcarbonfp"
                android:id="@+id/carbonfp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transportation"
                android:padding="14dp"
                android:text="@string/transportation"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:backgroundTint="@color/brightBlue"
                android:drawableLeft="@drawable/car"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/food"
                android:padding="14dp"
                android:text="@string/food"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"                android:backgroundTint="@color/brightBlue"
                android:drawableLeft="@drawable/food"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shopping"
                android:padding="14dp"
                android:text="@string/shopping"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"                android:backgroundTint="@color/brightBlue"
                android:drawableLeft="@drawable/shopping"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/energy"
                android:padding="14dp"
                android:text="@string/energy"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"                android:backgroundTint="@color/brightBlue"
                android:drawableLeft="@drawable/energy"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/penguinImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sidepenguin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="100dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="-30dp"
        android:scaleType="fitCenter" />



</androidx.constraintlayout.widget.ConstraintLayout>